{% extends "_layout/base.twig" %}

{% block title %}{{ entry.title }} Recipes | My Recipe Collection{% endblock %}

{% block content %}
    <div class="max-w-6xl mx-auto">
        <!-- Category Header -->
        <header class="mb-10">
            <h1 class="text-3xl md:text-4xl font-bold font-serif text-warm-brown mb-4">{{ entry.title }} Recipes</h1>

            {% if entry.description is defined %}
                <div class="text-lg text-gray-700 mb-6 italic">
                    {{ entry.description }}
                </div>
            {% endif %}

            <!-- Back to all categories link -->
            <a href="/categories" class="inline-flex items-center text-deep-rose hover:text-warm-brown transition duration-200">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                Back to all categories
            </a>
        </header>

        <!-- Recipe Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% set recipes = craft.entries()
                .section('recipes')
                .relatedTo(entry)
                .orderBy('title ASC')
                .all() %}

            {% if recipes|length %}
                {% for recipe in recipes %}
                    <a href="{{ recipe.url }}" class="group">
                        <article class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-lg transition duration-200 h-full">
                            {% if recipe.image.one() %}
                                <div class="aspect-w-16 aspect-h-9 border-b-2 border-soft-pink overflow-hidden">
                                    <img src="{{ recipe.image.one().url }}" alt="{{ recipe.title }}" class="object-cover w-full h-full group-hover:scale-105 transition-transform duration-300">
                                </div>
                            {% else %}
                                <div class="aspect-w-16 aspect-h-9 bg-soft-pink bg-opacity-20 border-b-2 border-soft-pink flex items-center justify-center">
                                    <span class="text-warm-brown font-serif">No image</span>
                                </div>
                            {% endif %}

                            <div class="p-4">
                                <h2 class="text-xl font-bold font-serif text-warm-brown group-hover:text-deep-rose transition duration-200">{{ recipe.title }}</h2>

                                {% if recipe.description %}
                                    <p class="mt-2 text-gray-700 line-clamp-2">{{ recipe.description }}</p>
                                {% endif %}

                                {% if recipe.categories.all()|length > 1 %}
                                    <div class="mt-3 flex flex-wrap gap-2">
                                        {% for cat in recipe.categories.all() %}
                                            {% if cat.id != entry.id %}
                                                <span class="inline-block px-2 py-1 text-xs bg-soft-pink bg-opacity-20 text-warm-brown rounded-full border border-soft-pink">{{ cat.title }}</span>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                {% endif %}
                            </div>
                        </article>
                    </a>
                {% endfor %}
            {% else %}
                <div class="col-span-full text-center py-16">
                    <p class="text-xl text-warm-brown">No recipes found in this entry.</p>
                    <a href="/" class="mt-4 inline-block px-6 py-3 bg-deep-rose text-white rounded-lg hover:bg-opacity-90 transition duration-200">Browse all recipes</a>
                </div>
            {% endif %}
        </div>

        <!-- Pagination (if needed) -->
        {% if paginate is defined and paginate.totalPages > 1 %}
            <div class="mt-12 flex justify-center">
                <div class="inline-flex items-center">
                    {% if paginate.prevUrl %}
                        <a href="{{ paginate.prevUrl }}" class="px-4 py-2 text-warm-brown border border-soft-pink rounded-l hover:bg-soft-pink hover:bg-opacity-20 transition duration-200">Previous</a>
                    {% else %}
                        <span class="px-4 py-2 text-gray-400 border border-gray-200 rounded-l cursor-not-allowed">Previous</span>
                    {% endif %}

                    {% for page in paginate.getPaginationInfo(2) %}
                        {% if page.type == 'current' %}
                            <span class="px-4 py-2 text-white bg-deep-rose border border-deep-rose">{{ page.num }}</span>
                        {% elseif page.type == 'number' %}
                            <a href="{{ page.url }}" class="px-4 py-2 text-warm-brown border border-soft-pink hover:bg-soft-pink hover:bg-opacity-20 transition duration-200">{{ page.num }}</a>
                        {% else %}
                            <span class="px-4 py-2 text-warm-brown border border-soft-pink">...</span>
                        {% endif %}
                    {% endfor %}

                    {% if paginate.nextUrl %}
                        <a href="{{ paginate.nextUrl }}" class="px-4 py-2 text-warm-brown border border-soft-pink rounded-r hover:bg-soft-pink hover:bg-opacity-20 transition duration-200">Next</a>
                    {% else %}
                        <span class="px-4 py-2 text-gray-400 border border-gray-200 rounded-r cursor-not-allowed">Next</span>
                    {% endif %}
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}