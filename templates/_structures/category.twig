{% extends "_layout/base.twig" %}

{% block title %}{{ entry.title }} Recipes | {{ siteName }}{% endblock %}

{% block content %}
    <div class="max-w-6xl mx-auto">
        <!-- Category Header -->
        <header class="mb-10">
            <h1 class="text-3xl md:text-4xl font-bold font-serif text-warm-brown mb-4">{{ entry.title }} Recipes</h1>

            {% if entry.description is defined %}
                <div class="text-lg text-gray-700 mb-6 italic">
                    {{ entry.description }}
                </div>
            {% endif %}

            <!-- Search form -->
            {% include "_components/search" %}

            <!-- Back to all categories link -->
            <a href="/categories" class="inline-flex items-center text-deep-rose hover:text-warm-brown transition duration-200">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                Back to all categories
            </a>
        </header>

        <!-- Recipe Grid -->
        {% set recipes = craft.entries()
            .section('recipes')
            .relatedTo(entry)
            .orderBy('title ASC')
            .all() %}

        {% if recipes|length %}
            {% set gridItems = [] %}
            {% for recipe in recipes %}
                {% set categories = [] %}
                {% for category in recipe.categories.all() %}
                    {% set categories = categories|merge([{
                        title: category.title,
                        href: category.url,
                    }]) %}
                {% endfor %}
                {% set gridItems = gridItems|merge([{
                    type: '@card/recipe',
                    data: {
                        title: recipe.title,
                        href: recipe.url,
                        image: recipe.image.one() ? recipe.image.one().url : null,
                        description: recipe.description,
                        categories: categories,
                    },
                }]) %}
            {% endfor %}
            {% include "@listing/grid" with {
                items: gridItems,
            } %}
        {% else %}
            <div class="col-span-full text-center py-16">
                <p class="text-xl text-warm-brown">No recipes found in this entry.</p>
                <a href="/" class="mt-4 inline-block px-6 py-3 bg-deep-rose text-white rounded-lg hover:bg-opacity-90 transition duration-200">Browse all recipes</a>
            </div>
        {% endif %}

        <!-- Pagination (if needed) -->
        {% if paginate is defined and paginate.totalPages > 1 %}
            <div class="mt-12 flex justify-center">
                <div class="inline-flex items-center">
                    {% if paginate.prevUrl %}
                        <a href="{{ paginate.prevUrl }}" class="px-4 py-2 text-warm-brown border border-soft-pink rounded-l hover:bg-soft-pink hover:bg-opacity-20 transition duration-200">Previous</a>
                    {% else %}
                        <span class="px-4 py-2 text-gray-400 border border-gray-200 rounded-l cursor-not-allowed">Previous</span>
                    {% endif %}

                    {% for page in paginate.getPaginationInfo(2) %}
                        {% if page.type == 'current' %}
                            <span class="px-4 py-2 text-white bg-deep-rose border border-deep-rose">{{ page.num }}</span>
                        {% elseif page.type == 'number' %}
                            <a href="{{ page.url }}" class="px-4 py-2 text-warm-brown border border-soft-pink hover:bg-soft-pink hover:bg-opacity-20 transition duration-200">{{ page.num }}</a>
                        {% else %}
                            <span class="px-4 py-2 text-warm-brown border border-soft-pink">...</span>
                        {% endif %}
                    {% endfor %}

                    {% if paginate.nextUrl %}
                        <a href="{{ paginate.nextUrl }}" class="px-4 py-2 text-warm-brown border border-soft-pink rounded-r hover:bg-soft-pink hover:bg-opacity-20 transition duration-200">Next</a>
                    {% else %}
                        <span class="px-4 py-2 text-gray-400 border border-gray-200 rounded-r cursor-not-allowed">Next</span>
                    {% endif %}
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}