{% extends "_layout/base.twig" %}

{% block title %}{{ siteName }}{% endblock %}

{% block content %}
    <div class="max-w-6xl mx-auto">
        <!-- Category Selection Block -->
        <section class="mb-12">
            <div class="bg-white rounded-lg shadow-md p-6 border-2 border-soft-pink">
                <h2 class="text-2xl font-serif font-bold text-warm-brown mb-4">Browse by Category</h2>

                <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3">
                    {% for category in craft.entries.section('categories').all() %}
                        <a href="{{ category.url }}" class="bg-soft-pink bg-opacity-20 hover:bg-opacity-40 transition duration-200 rounded-lg p-3 text-center border border-soft-pink">
                            <span class="font-serif text-warm-brown">{{ category.title }}</span>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </section>

        <!-- Recent Recipes Heading -->
        <h1 class="text-3xl font-bold font-serif text-warm-brown mb-8 pb-2 border-b-2 border-deep-rose">All Recipes</h1>

        <!-- Recipe Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {% for recipe in craft.entries.section('recipes').orderBy('postDate DESC').all() %}
                <a href="{{ recipe.url }}" class="group">
                    <article class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-lg transition duration-200 h-full">
                        {% if recipe.image.one() %}
                            <div class="aspect-w-16 aspect-h-9 border-b-2 border-soft-pink overflow-hidden">
                                <img src="{{ recipe.image.one().url }}" alt="{{ recipe.title }}" class="object-cover w-full h-full group-hover:scale-105 transition-transform duration-300">
                            </div>
                        {% else %}
                            <div class="aspect-w-16 aspect-h-9 bg-soft-pink bg-opacity-20 border-b-2 border-soft-pink flex items-center justify-center">
                                <span class="text-warm-brown font-serif">No image</span>
                            </div>
                        {% endif %}

                        <div class="p-4">
                            <h2 class="text-xl font-bold font-serif text-warm-brown group-hover:text-deep-rose transition duration-200">{{ recipe.title }}</h2>

                            {% if recipe.description %}
                                <p class="mt-2 text-gray-700 line-clamp-2">{{ recipe.description }}</p>
                            {% endif %}

                            {% if recipe.categories.all()|length %}
                                <div class="mt-3 flex flex-wrap gap-2">
                                    {% for category in recipe.categories.all() %}
                                        <span class="inline-block px-2 py-1 text-xs bg-soft-pink bg-opacity-20 text-warm-brown rounded-full border border-soft-pink">{{ category.title }}</span>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>
                    </article>
                </a>
            {% endfor %}
        </div>

    </div>
{% endblock %}