{% set entryId = craft.app.request.getQueryParam('entryId') %}
{% if not entryId %}
    {% exit 404 %}
{% endif %}
{% set recipe = craft.entries.id(entryId).one() %}
{% if not recipe %}
    {% exit 404 %}
{% endif %}

{# Recipe Print View Template #}
<style type="text/css">
    :root {
        --primary-color: #c86b6b;
        --accent-color: #8e6e53;
        --text-dark: #2d2d2d;
        --text-light: #666;
        --border-light: #eee;
    }

    body {
        font-family: 'Georgia', serif;
        line-height: 1.6;
        color: var(--text-dark);
        margin: 0;
        padding: 0;
    }

    .print-container {
        max-width: 850px;
        margin: 0 auto;
    }

    /* Typography */
    .recipe-title {
        font-family: 'Arial', sans-serif;
        font-size: 28pt;
        font-weight: 800;
        margin-bottom: 4pt;
        text-align: center;
        text-transform: uppercase;
    }

    .recipe-description {
        font-style: italic;
        font-size: 11pt;
        color: var(--text-light);
        margin: 0 auto 25px;
        text-align: center;
        max-width: 85%;
    }

    .recipe-meta {
        display: flex;
        justify-content: center;
        gap: 30px;
        margin: 20px 0;
        padding: 15px 0;
        border-top: 1px solid var(--border-light);
        border-bottom: 1px solid var(--border-light);
    }

    .meta-item { text-align: center; font-family: 'Arial', sans-serif; }
    .meta-label { font-size: 8pt; text-transform: uppercase; color: var(--text-light); display: block; }
    .meta-value { font-size: 11pt; font-weight: bold; color: var(--accent-color); }

    /* Sections */
    h2 {
        font-family: 'Arial', sans-serif;
        font-size: 16pt;
        text-transform: uppercase;
        margin-top: 30pt;
        color: var(--accent-color);
        display: flex;
        align-items: center;
    }

    h2:after {
        content: ""; flex: 1; margin-left: 15px; height: 1px; background: var(--border-light);
    }

    .ingredients-list { list-style: none; padding: 0; column-count: 2; column-gap: 40px; }
    .ingredient-item {
        margin-bottom: 12px;
        break-inside: avoid;
        position: relative;
        padding-left: 28px;
    }

    .ingredient-item:before {
        content: ""; position: absolute; left: 0; top: 3px; width: 14px; height: 14px;
        border: 1px solid var(--primary-color); border-radius: 3px;
    }

    .instructions-list { padding: 0; list-style: none; counter-reset: steps; }
    .instruction-item {
        margin-bottom: 20px;
        padding-left: 45px;
        position: relative;
        break-inside: avoid;
    }

    .instruction-item:before {
        counter-increment: steps; content: counter(steps);
        position: absolute; left: 0; top: -2px; width: 30px; height: 30px;
        background-color: var(--primary-color); color: white;
        border-radius: 50%; text-align: center; line-height: 30px;
        font-weight: bold; font-size: 10pt;
    }

    /* Print & Screen Utilities */
    @media screen {
        body { background-color: #f9f7f2; padding: 40px 20px; }
        .print-container { background: white; padding: 50px; border-radius: 12px; box-shadow: 0 10px 30px rgba(0,0,0,0.05); }
        .screen-controls { margin-bottom: 30px; display: flex; justify-content: space-between; }
        .btn { background: var(--primary-color); color: white; padding: 10px 20px; text-decoration: none; border-radius: 5px; border: none; cursor: pointer; }
    }

    @media print {
        .no-print { display: none !important; }
        .instruction-item:before { -webkit-print-color-adjust: exact; print-color-adjust: exact; }
    }
</style>

<div class="print-container">
    {# Screen-only navigation #}
    <div class="screen-controls no-print">
        <a href="{{ recipe.url|default('#') }}" class="btn">‚Üê Back to Recipe</a>
        <button onclick="window.print()" class="btn">Print PDF</button>
    </div>

    <header>
        <h1 class="recipe-title">{{ recipe.title }}</h1>
        {% if recipe.description %}
            <p class="recipe-description">{{ recipe.description }}</p>
        {% endif %}

        <div class="recipe-meta">
            <div class="meta-item">
                <span class="meta-label">Prep</span>
                <span class="meta-value">{{ recipe.prepTime }}</span>
            </div>
            <div class="meta-item">
                <span class="meta-label">Cook</span>
                <span class="meta-value">{{ recipe.cookTime }}</span>
            </div>
            <div class="meta-item">
                <span class="meta-label">Yields</span>
                <span class="meta-value">{{ recipe.servings }}</span>
            </div>
        </div>
    </header>

    {% if recipe.image.one() is not null %}
        <div class="recipe-image">
            <img src="{{ recipe.image.one().url }}" alt="{{ recipe.title }}">
        </div>
    {% endif %}

    {% for entry in recipe.ingredientsAndInstructions %}
        {% if entry.type == 'ingredientsBlock' %}
        <section class="recipe-section">
            <h2>Ingredients</h2>
            <ul class="ingredients-list">
                {% for ingredient in entry.ingredientsList %}
                    <li class="ingredient-item">
                        <span class="quantity">{{ ingredient.quantity }}</span>
                        {{ ingredient.ingredientName }}
                        {% if ingredient.notes %}
                            <span class="optional-note">({{ ingredient.notes }})</span>
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
        </section>
        {% elseif entry.type == 'instructionsBlock' %}
            <section class="recipe-section">
                <h2>Instructions</h2>
                <ol class="instructions-list">
                    {% for step in entry.instructions %}
                        <li class="instruction-item">
                            {{ step.instruction }}
                        </li>
                    {% endfor %}
                </ol>
            </section>
        {% elseif entry.type == 'heading' %}
            <h2>{{ entry.title }}</h2>
        {% endif %}
    {% endfor %}

</div>