<style type="text/css">
                          /* Base styles for both screen and print */
                      body {
                          font-family: 'Georgia', serif;
                          line-height: 1.5;
                          color: #333;
                          margin: 0;
                          padding: 0;
                      }

.print-container {
    max-width: 800px;
    margin: 0 auto;
}

/* Clear typography and hierarchy */
.recipe-title {
    font-size: 24pt;
    font-weight: bold;
    margin-bottom: 8pt;
    text-align: center;
    font-family: 'Arial', sans-serif;
}

.recipe-meta {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
    margin: 15px 0 25px;
    padding-bottom: 15px;
    border-bottom: 1px solid #ddd;
}

.meta-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    font-family: 'Arial', sans-serif;
}

.meta-label {
    font-size: 9pt;
    text-transform: uppercase;
    color: #666;
}

.meta-value {
    font-size: 11pt;
    font-weight: bold;
}

.recipe-description {
    font-style: italic;
    margin-bottom: 25px;
