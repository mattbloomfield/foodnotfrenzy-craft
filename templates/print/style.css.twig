.ingredients-list {
    list-style-type: none;
    padding-left: 0;
    margin-bottom: 20px;
    column-count: 2;
    column-gap: 40px;
}

.ingredient-item {
    margin-bottom: 10px;
    break-inside: avoid;
    position: relative;
    padding-left: 20px;
}

.ingredient-item:before {
