        box-shadow: 0 0 15px rgba(0,0,0,0.1);
        border-radius: 8px;
    }

    .screen-controls {
        max-width: 800px;
        margin: 0 auto 20px;
        display: flex;
        justify-content: space-between;
    }

    .btn {
        background: #c86b6b;
