}

.quantity {
    font-weight: bold;
}

.optional-note {
    font-style: italic;
    color: #666;
    margin-left: 5px;
}

/* Instructions styling */
.instructions-list {
    padding-left: 25px;
    margin-top: 0;
}

.instruction-item {
    margin-bottom: 15px;
    break-inside: avoid;
    position: relative;
}

.instruction-number {
    position: absolute;
    left: -25px;
    font-weight: bold;
    color: #c86b6b;
}

