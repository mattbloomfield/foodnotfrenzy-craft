.print-footer {
    margin-top: 40px;
    padding-top: 15px;
    border-top: 1px solid #ddd;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 9pt;
    color: #666;
}

.source-url {
    flex-grow: 1;
}

.qrcode {
    margin-left: 20px;
    flex-shrink: 0;
}

/* Screen-only styles */
@media screen {
    body {
        background-color: #f5f0e1;
        padding: 20px;
