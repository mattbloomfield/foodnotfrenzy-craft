    max-width: 80%;
    margin-left: auto;
    margin-right: auto;
}

.recipe-image {
    text-align: center;
    margin-bottom: 30px;
}

.recipe-image img {
    max-width: 250px;
    max-height: 250px;
    border-radius: 5px;
}

