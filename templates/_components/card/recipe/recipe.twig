<a href="{{ href }}" class="group">
	<article class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-lg transition duration-200 h-full">
		<div class="aspect-w-16 aspect-h-9 border-b-2 border-soft-pink overflow-hidden">
			{% set card = {
                mode: 'crop',
                width: 352,
                height: 264,
                quality: 75,
                position: 'center-center'
            } %}
			{% if image is not null %}
				<img src="{{ image.getUrl(card) }}" width="{{ image.getWidth(card) }}" height="{{ image.getHeight(card) }}" alt="{{ title }}" class="object-cover w-full h-full group-hover:scale-105 transition-transform duration-300">
			{% else %}
				{# take the below and make sure it always displays at 352x264 #}
				<img src="/dist/placeholder.jpg" alt="Placeholder Image" class="object-cover w-full h-full group-hover:scale-105 transition-transform duration-300" style="width: 352px; height: 264px;">
			{% endif %}
		</div>

		<div class="p-4">
			<h2 class="text-xl font-bold font-serif text-warm-brown group-hover:text-deep-rose transition duration-200">{{ title }}</h2>

			{% if description %}
				<p class="mt-2 text-gray-700 line-clamp-2">{{ description }}</p>
			{% endif %}

			{% if categories|length %}
				<div class="mt-3 flex flex-wrap gap-2">
					{% for category in categories %}
						<span class="inline-block px-2 py-1 text-xs bg-soft-pink/20 text-warm-brown rounded-full border border-soft-pink" href="{{ category.href }}">{{ category.title }}</span>
					{% endfor %}
				</div>
			{% endif %}
            {# post date #}
            {% if date is defined %}
                <p class="mt-4 text-gray-400 text-xs">Added on {{ date|date('F j, Y') }} at {{ date|date('g:i a') }}</p>
            {% endif %}
		</div>
	</article>
</a>
