<a href="{{ href }}" class="group">
    <article class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-lg transition duration-200 h-full">
        {% if image %}
            <div class="aspect-w-16 aspect-h-9 border-b-2 border-soft-pink overflow-hidden">
                <img src="{{ image }}" alt="{{ title }}" class="object-cover w-full h-full group-hover:scale-105 transition-transform duration-300">
            </div>
        {% else %}
            <div class="aspect-w-16 aspect-h-9 bg-soft-pink bg-opacity-20 border-b-2 border-soft-pink flex items-center justify-center">
                <span class="text-warm-brown font-serif">No image</span>
            </div>
        {% endif %}

        <div class="p-4">
            <h2 class="text-xl font-bold font-serif text-warm-brown group-hover:text-deep-rose transition duration-200">{{ title }}</h2>

            {% if description %}
                <p class="mt-2 text-gray-700 line-clamp-2">{{ description }}</p>
            {% endif %}

            {% if categories|length %}
                <div class="mt-3 flex flex-wrap gap-2">
                    {% for category in categories %}
                        <span class="inline-block px-2 py-1 text-xs bg-soft-pink bg-opacity-20 text-warm-brown rounded-full border border-soft-pink" href="{{ category.href }}">{{ category.title }}</span>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </article>
</a>